@page
@model RecruitCatDickendd.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Information</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobTitle.JobTitleId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.IndustryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.SigningBonus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.SigningBonus)
        </dd>
    </dl>
</div>

<h3>Candidates Associated with this Company</h3>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].Industry)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].JobSearchStartDate)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].StartDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Company.Candidates)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.TargetSalary)</td>
                    <td>@Html.DisplayFor(modelItem => item.Industry.IndustryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobSearchStartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>
                        <a asp-page="/Candidates/Details" asp-route-id="@item.CandidateId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
