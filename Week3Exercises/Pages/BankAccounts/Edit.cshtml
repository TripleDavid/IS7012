@page
@model Week3Exercises.Pages.BankAccounts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Update Details</h1>

<h4>Bank Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BankAccount.BankAccountId" />
            <div class="form-group">
                <label asp-for="BankAccount.AccountNumber" class="control-label"></label>
                <input asp-for="BankAccount.AccountNumber" class="form-control" />
                <span asp-validation-for="BankAccount.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.CurrentBalance" class="control-label"></label>
                <input asp-for="BankAccount.CurrentBalance" class="form-control" />
                <span asp-validation-for="BankAccount.CurrentBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.AccountName" class="control-label"></label>
                <input asp-for="BankAccount.AccountName" class="form-control" />
                <span asp-validation-for="BankAccount.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BankAccount.IsActive" /> @Html.DisplayNameFor(model => model.BankAccount.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.AccountHolderId" class="control-label"></label>
                <select asp-for="BankAccount.AccountHolderId" class="form-control" asp-items="ViewBag.AccountHolderId"></select>
                <span asp-validation-for="BankAccount.AccountHolderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
